<Window x:Class="Blockchain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blockchain"
        mc:Ignorable="d"
        Title="My Coin App" Height="600" Width="1000" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="40" Background="Blue">
                <Button Content="Home" Click="Home_Click" Height="50" Width="200"></Button>
                <Button Content="Create Wallet" Click="CreateWallet_Clik" Height="50" Width="200"></Button>
                <Button Content="Account Information" Click="AccountInfor_Click" Height="50" Width="200"></Button>
                <Button Content="Send Coin" Click="SendCoin_Click" Height="50" Width="200"></Button>
                <Button Content="History" Click="HistoryExchange_Click" Height="50" Width="200"></Button>
            </StackPanel>
            <DockPanel  >
                <Frame x:Name="frame"></Frame>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
